@model Sehmus.EntitiesLayer.Concrete.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>İletişim Bilgileri Ekleme Paneli</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia1" class="control-label"></label>
                <input asp-for="SocialMedia1" class="form-control" />
                <span asp-validation-for="SocialMedia1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia2" class="control-label"></label>
                <input asp-for="SocialMedia2" class="form-control" />
                <span asp-validation-for="SocialMedia2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia3" class="control-label"></label>
                <input asp-for="SocialMedia3" class="form-control" />
                <span asp-validation-for="SocialMedia3" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                @Html.DropDownListFor(x=>x.AppUser.Id,(List<SelectListItem>)ViewBag.dgr,new{@class="form-control"})
            </div>
         <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
</div>
