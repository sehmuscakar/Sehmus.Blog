@model Sehmus.EntitiesLayer.Concrete.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Blog Güncelleme Paneli</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CreatedDate" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogImage" class="control-label"></label>
                <input asp-for="BlogImage" class="form-control" type="file"/>
                <span asp-validation-for="BlogImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogCategoryId" class="control-label"></label>
                <input asp-for="BlogCategoryId" class="form-control" />
                <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionDetails" class="control-label"></label>
                <textarea asp-for="DescriptionDetails" class="form-control"></textarea>
                <span asp-validation-for="DescriptionDetails" class="text-danger"></span>
            </div>      
            <input type="hidden" asp-for="Id" />
              <div class="form-group">
                <label asp-for="AppUserId" class="control-label">Güncelleyen Kişi</label>
                <input asp-for="AppUserId" class="form-control"/>
                <span asp-validation-for="AppUserId" class="text-danger"></span>
            </div>
         <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
</div>


